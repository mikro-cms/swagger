doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title Swagger UI
    style.
      * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        font-size: 16px;
        font-family: Arial, Helvetica, sans-serif;
      }
      #Wrapper {
        position: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        background: #FFFFFF;
      }
      .box {
        padding: 1rem 3rem;
        display: flex;
        flex-direction: column;
        width: auto;
        height: auto;
        background: #FFFFFF;
        box-shadow: 0 0 0.5rem #F0F0F0;
        border: 1px solid #F0F0F0;
        border-radius: 10px;
      }
      .box h1 {
        margin-bottom: 1rem;
        text-align: center;
        font-size: 1rem;
        color: #333333;
      }
      .box p {
        margin-bottom: 1rem;
        text-align: center;
        font-size: 0.8rem;
        color: red;
      }
      .row {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-bottom: 1rem;
      }
      .row label {
        font-size: 0.75rem;
        color: #999999;
      }
      .row input {
        padding: 0 0.5rem;
        width: 100%;
        height: 2rem;
        font-size: 0.75rem;
        color: #333333;
        border: 1px solid #999999;
        border-radius: 10px;
      }
      .action {
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
      }
      .action button {
        padding: 0 1rem;
        width: auto;
        height: 2rem;
        font-size: 0.75rem;
        border: 1px solid #999999;
        border-radius: 10px;
      }
  body
    #Wrapper
      .box
        h1 Login
        p= message
        form(action='/swagger', method='post')
          .row
            label(for='username') Username
            input(type='text', name='username', value=username, required)
          .row
            label(for='password') Password
            input(type='password', name='password', value=password, required)
          .action
            button(type='submit') Login
